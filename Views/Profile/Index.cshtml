@model QuizWeb_TrioForce.ViewModels.UserEditViewModel
@{
    ViewData["Title"] = "Hồ sơ cá nhân";
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
            position: relative;
            overflow-x: hidden;
        }

        .bg-animation {
            position: fixed;
            width: 100%;
            height: 100%;
            top: 0;
            left: 0;
            z-index: 0;
            overflow: hidden;
        }

        .floating-shape {
            position: absolute;
            border-radius: 50%;
            opacity: 0.1;
            animation: float 20s infinite ease-in-out;
        }

        .shape1 {
            width: 300px;
            height: 300px;
            background: #fff;
            top: 10%;
            left: 10%;
            animation-delay: 0s;
        }

        .shape2 {
            width: 200px;
            height: 200px;
            background: #f093fb;
            top: 60%;
            left: 70%;
            animation-delay: 3s;
        }

        .shape3 {
            width: 250px;
            height: 250px;
            background: #764ba2;
            top: 70%;
            left: 20%;
            animation-delay: 6s;
        }

        keyframes float {
            0%, 100%

        {
            transform: translate(0, 0) rotate(0deg);
        }

        33% {
            transform: translate(50px, -50px) rotate(120deg);
        }

        66% {
            transform: translate(-30px, 30px) rotate(240deg);
        }

        }

        .profile-container {
            position: relative;
            z-index: 1;
            max-width: 900px;
            width: 100%;
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border-radius: 30px;
            box-shadow: 0 30px 80px rgba(0, 0, 0, 0.3);
            overflow: hidden;
            animation: slideUp 0.8s ease-out;
        }

        keyframes slideUp {
            from

        {
            opacity: 0;
            transform: translateY(50px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .profile-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            padding: 50px 40px 120px;
            position: relative;
            overflow: hidden;
        }

            .profile-header::before {
                content: '';
                position: absolute;
                width: 500px;
                height: 500px;
                background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
                top: -250px;
                right: -100px;
                border-radius: 50%;
            }

        .header-content {
            position: relative;
            z-index: 2;
            text-align: center;
        }

        .profile-avatar-wrapper {
            position: relative;
            display: inline-block;
            margin-bottom: 20px;
        }

        .profile-avatar {
            width: 140px;
            height: 140px;
            border-radius: 50%;
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            border: 6px solid rgba(255,255,255,0.3);
            box-shadow: 0 15px 40px rgba(0,0,0,0.3);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 60px;
            color: white;
            animation: pulse 3s infinite;
            position: relative;
        }

        keyframes pulse {
            0%, 100%

        {
            transform: scale(1);
        }

        50% {
            transform: scale(1.05);
        }

        }

        .avatar-badge {
            position: absolute;
            bottom: 5px;
            right: 5px;
            width: 40px;
            height: 40px;
            background: linear-gradient(135deg, #ffd89b 0%, #19547b 100%);
            border-radius: 50%;
            border: 4px solid white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 20px;
        }

        .username-display {
            font-size: 28px;
            font-weight: 700;
            color: white;
            margin-bottom: 10px;
            text-shadow: 0 2px 10px rgba(0,0,0,0.2);
        }

        .user-role {
            display: inline-block;
            padding: 8px 20px;
            background: rgba(255,255,255,0.2);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            color: white;
            font-size: 14px;
            font-weight: 500;
        }

        .profile-body {
            padding: 40px;
            margin-top: -60px;
            position: relative;
        }

        .stats-row {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
            gap: 20px;
            margin-bottom: 40px;
        }

        .stat-card {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            padding: 25px;
            border-radius: 20px;
            text-align: center;
            color: white;
            box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
            transition: transform 0.3s;
        }

            .stat-card:hover {
                transform: translateY(-10px);
            }

        .stat-number {
            font-size: 36px;
            font-weight: 700;
            margin-bottom: 5px;
        }

        .stat-label {
            font-size: 14px;
            opacity: 0.9;
        }

        .info-section {
            background: white;
            border-radius: 20px;
            padding: 30px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.05);
        }

        .section-title {
            font-size: 22px;
            font-weight: 600;
            color: #667eea;
            margin-bottom: 25px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .info-grid {
            display: grid;
            gap: 20px;
        }

        .info-item {
            display: flex;
            align-items: center;
            padding: 20px;
            background: linear-gradient(135deg, #f8f9ff 0%, #f0f4ff 100%);
            border-radius: 15px;
            border-left: 4px solid #667eea;
            transition: all 0.3s;
            position: relative;
        }

            .info-item:hover {
                transform: translateX(10px);
                box-shadow: 0 5px 20px rgba(102, 126, 234, 0.2);
            }

        .info-icon {
            width: 50px;
            height: 50px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 24px;
            margin-right: 20px;
            flex-shrink: 0;
        }

        .info-content {
            flex: 1;
        }

        .info-label {
            font-size: 13px;
            color: #888;
            font-weight: 500;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-bottom: 5px;
        }

        .info-value {
            font-size: 17px;
            color: #333;
            font-weight: 500;
            cursor: pointer;
            padding: 5px 10px;
            border-radius: 8px;
            transition: all 0.3s;
            display: inline-block;
            min-width: 200px;
        }

            .info-value.editable:hover {
                background: rgba(102, 126, 234, 0.1);
                color: #667eea;
            }

            .info-value.editable::after {
                content: " ✏️";
                opacity: 0;
                transition: opacity 0.3s;
            }

            .info-value.editable:hover::after {
                opacity: 1;
            }

        .editing-input {
            width: 100%;
            padding: 12px 15px;
            border: 3px solid #667eea;
            border-radius: 10px;
            font-size: 16px;
            font-family: 'Poppins', sans-serif;
            outline: none;
            transition: all 0.3s;
            animation: inputPop 0.3s;
        }

        keyframes inputPop {
            0%

        {
            transform: scale(0.9);
        }

        50% {
            transform: scale(1.02);
        }

        100% {
            transform: scale(1);
        }

        }

        .form-control {
            width: 100%;
            padding: 12px 15px;
            border: 2px solid #e0e0e0;
            border-radius: 10px;
            font-size: 16px;
            font-family: 'Poppins', sans-serif;
            background: white;
            transition: all 0.3s;
            cursor: pointer;
        }

            .form-control:focus {
                outline: none;
                border-color: #667eea;
                box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
            }

        .logout-btn {
            margin-top: 30px;
            width: 100%;
            padding: 18px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            border-radius: 15px;
            color: white;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
            box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
        }

            .logout-btn:hover {
                transform: translateY(-3px);
                box-shadow: 0 15px 40px rgba(102, 126, 234, 0.4);
            }

        .toast {
            position: fixed;
            top: 30px;
            right: 30px;
            padding: 20px 30px;
            background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
            color: white;
            border-radius: 15px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.3);
            font-weight: 500;
            z-index: 9999;
            animation: toastSlide 0.5s, toastSlideOut 0.5s 2.5s;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        keyframes toastSlide {
            from

        {
            transform: translateX(500px);
            opacity: 0;
        }

        to {
            transform: translateX(0);
            opacity: 1;
        }

        }

        keyframes toastSlideOut {
            from

        {
            transform: translateX(0);
            opacity: 1;
        }

        to {
            transform: translateX(500px);
            opacity: 0;
        }

        }

        media (max-width: 768px) {
            .profile-header

        {
            padding: 40px 20px 100px;
        }

        .profile-body {
            padding: 30px 20px;
        }

        .stats-row {
            grid-template-columns: 1fr 1fr;
        }

        .info-item {
            flex-direction: column;
            text-align: center;
        }

        .info-icon {
            margin: 0 0 15px 0;
        }

        }</style>
</head>
<body>
    <div class="bg-animation">
        <div class="floating-shape shape1"></div>
        <div class="floating-shape shape2"></div>
        <div class="floating-shape shape3"></div>
    </div>

    <div class="profile-container">
        <div class="profile-header">
            <div class="header-content">
                <div class="profile-avatar-wrapper">
                    <div class="profile-avatar">
                        👤
                        <div class="avatar-badge">⭐</div>
                    </div>
                </div>
                <h1 class="username-display">@Model.Username</h1>
                <span class="user-role">🎮 Quiz Master</span>
            </div>
        </div>

        <div class="profile-body">
            <div class="stats-row">
                <div class="stat-card">
                    <div class="stat-number">🏆</div>
                    <div class="stat-label">Top Player</div>
                </div>
                <div class="stat-card">
                    <div class="stat-number">⚡</div>
                    <div class="stat-label">Quick Thinker</div>
                </div>
                <div class="stat-card">
                    <div class="stat-number">🎯</div>
                    <div class="stat-label">Ace Scorer</div>
                </div>
            </div>

            <div class="info-section">
                <h2 class="section-title">
                    📋 Thông tin cá nhân
                </h2>
                <div class="info-grid">
                    <div class="info-item">
                        <div class="info-icon">👤</div>
                        <div class="info-content">
                            <div class="info-label">Họ và tên</div>
                            <div class="info-value editable" data-field="FullName">@Model.Fullname</div>
                        </div>
                    </div>

                    <div class="info-item">
                        <div class="info-icon">📧</div>
                        <div class="info-content">
                            <div class="info-label">Email</div>
                            <div class="info-value editable" data-field="Email">@Model.Email</div>
                        </div>
                    </div>

                    <div class="info-item">
                        <div class="info-icon">🎂</div>
                        <div class="info-content">
                            <div class="info-label">Ngày sinh</div>
                            <div class="info-value editable" data-field="BirthDay">@Model.Birthday</div>
                        </div>
                    </div>

                    <div class="info-item">
                        <div class="info-icon">⚧️</div>
                        <div class="info-content">
                            <div class="info-label">Giới tính</div>
                            @Html.DropDownListFor(m => m.Sex, new List<SelectListItem>
                            {
                            new SelectListItem { Text = "👨 Nam", Value = "True" },
                            new SelectListItem { Text = "👩 Nữ", Value = "False" }
                            },
                                     new { @class = "form-control", onchange = "SelectChange(this)", data_field = "Sex" })
                        </div>
                    </div>
                </div>

                <button class="logout-btn" onclick="window.location.href='/Identity/Account/Logout'">
                    🚪 Đăng xuất
                </button>
            </div>
        </div>
    </div>

    @Html.AntiForgeryToken()

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const editable = document.querySelectorAll('.editable');

            editable.forEach(span => {
                span.addEventListener('click', function () {
                    if (this.querySelector('input')) return;

                    const fieldName = this.dataset.field;
                    const currentValue = this.textContent.trim();

                    const input = document.createElement('input');
                    input.type = 'text';
                    input.value = currentValue;
                    input.className = 'editing-input';

                    this.textContent = '';
                    this.appendChild(input);
                    input.focus();

                    const saveEdit = async () => {
                        const newValue = input.value.trim();

                        if (newValue === currentValue || newValue === '') {
                            span.textContent = currentValue;
                            return;
                        }

                        try {
                            const response = await fetch('@Url.Action("UpdateField", "Profile")', {
                                method: 'POST',
                                headers: {
                                    'Content-Type': 'application/json',
                                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                                },
                                body: JSON.stringify({
                                    fieldName: fieldName,
                                    value: newValue
                                })
                            });

                            const result = await response.json();

                            if (result.success) {
                                span.textContent = newValue;
                                showToast('✅ Cập nhật thành công!');
                            } else {
                                alert('❌ Lỗi: ' + result.message);
                                span.textContent = currentValue;
                            }
                        } catch (error) {
                            alert('❌ Lỗi kết nối');
                            span.textContent = currentValue;
                        }
                    };

                    input.addEventListener('blur', saveEdit);
                    input.addEventListener('keypress', function (e) {
                        if (e.key === 'Enter') {
                            this.blur();
                        }
                    });
                });
            });
        });

        function SelectChange(select) {
            const fieldName = select.dataset.field;
            const value = select.value;

            const saveChange = async () => {
                try {
                    const response = await fetch('@Url.Action("UpdateField", "Profile")', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                        },
                        body: JSON.stringify({
                            fieldName: fieldName,
                            value: value
                        })
                    });

                    const result = await response.json();
            z
                    if (result.success) {
                        showToast('✅ Cập nhật giới tính thành công!');
                    } else {
                        alert('❌ Lỗi: ' + result.message);
                    }
                } catch (e) {
                    alert('❌ Lỗi cập nhật');
                }
            }

            saveChange();
        }

        function showToast(message) {
            const toast = document.createElement('div');
            toast.className = 'toast';
            toast.innerHTML = message;
            document.body.appendChild(toast);

            setTimeout(() => {
                toast.remove();
            }, 3000);
        }
    </script>
</body>
</html>