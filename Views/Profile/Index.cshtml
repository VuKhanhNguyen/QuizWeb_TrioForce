@model QuizWeb_TrioForce.ViewModels.UserEditViewModel
@{
    ViewData["Title"] = "Hồ sơ cá nhân";
}

@section Styles {
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
}

<div class="profile-container">
    <div class="profile-header fade-in-up">
        <div class="profile-banner">
            <div class="banner-decoration"></div>
            <div class="banner-decoration"></div>
        </div>
        <div class="avatar-wrapper">
            <div class="avatar">
                <span class="avatar-icon">👤</span>
            </div>
        </div>
        <h1 class="username">@Model.Username</h1>
        <span class="user-badge">⭐ Thành viên</span>
    </div>

    <div class="profile-body">
        <div class="section-header fade-in-up fade-in-delay-1">
            <h2>📝 Thông tin cá nhân</h2>
        </div>
        
        <div class="form-row fade-in-up fade-in-delay-2">
            <div class="form-group">
                <label><span class="label-icon">👤</span> Họ và tên</label>
                <input type="text" id="fullname" value="@Model.Fullname" class="form-control" />
            </div>

            <div class="form-group">
                <label><span class="label-icon">📧</span> Email</label>
                <input type="email" id="email" value="@Model.Email" class="form-control" />
            </div>
        </div>

        <div class="form-row fade-in-up fade-in-delay-3">
            <div class="form-group">
                <label><span class="label-icon">🎂</span> Ngày sinh</label>
                <input type="text" id="birthday" value="@Model.Birthday" class="form-control" placeholder="dd/MM/yyyy" />
            </div>

            <div class="form-group">
                <label><span class="label-icon"></span> Giới tính</label>
                @Html.DropDownListFor(m => m.Sex, new List<SelectListItem>
                {
                    new SelectListItem { Text = "Nam", Value = "True" },
                    new SelectListItem { Text = "Nữ", Value = "False" }
                }, new { @class = "form-control", id = "sex" })
            </div>
        </div>

        <div class="button-group">
            <button type="button" class="btn btn-primary" onclick="saveProfile()">
                <span class="btn-icon">💾</span> Lưu thay đổi
            </button>
        </div>
    </div>
</div>

@Html.AntiForgeryToken()

@section Scripts {
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
    <script src="~/js/profile.js" asp-append-version="true"></script>
}


